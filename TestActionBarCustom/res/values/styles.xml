<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="toolbarStyle">@style/Widget.Toolbar</item>
        <item name="searchViewStyle">@style/MySearchView</item>
        <item name="actionButtonStyle">@style/MyButtonStyle</item>
        <item name="toolbarNavigationButtonStyle">@style/MyNavigationButton</item>
    </style>

    <style name="Widget.Toolbar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
    </style>
    
    <style name="MyNavigationButton" parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">24dp</item>
    </style>

    <style name="MySearchView" parent="@style/Widget.AppCompat.SearchView">
        <item name="layout">@layout/my_search_view</item>
    </style>
    
    <style name="MyButtonStyle" parent="@style/Widget.AppCompat.ActionButton">
        <item name="android:minHeight">64dp</item>
    </style>
    
</resources>